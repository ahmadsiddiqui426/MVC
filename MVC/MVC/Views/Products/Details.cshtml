@model MVC.Models.Product

<h2>Product Details</h2>

<div>
    <h4>Product ID: @Model.Id</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Description:</dt>
        <dd>@Model.Description</dd>
        <dt>Price:</dt>
        <dd>@Model.Price</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
