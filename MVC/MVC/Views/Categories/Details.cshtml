@model CategoryDetailsViewModel

<h2>Category Details</h2>


<div>
    <h4>Category ID: @Model.Category.Id</h4>
    <h4>Category Name: @Model.Category.Name</h4>
</div>

<h3>Products in this Category:</h3>


<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
   
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Category.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Category.Id">Delete</a>
</p>
